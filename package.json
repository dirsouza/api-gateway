{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "API Gateway Vendas",
  "main": "index.js",
  "license": "MIT",
  "repository": "https://github.com/dirsouza/api-gateway.git",
  "scripts": {
    "dev": "ts-node-dev src/index.ts",
    "build": "gulp build",
    "test:watch": "jest --watch",
    "test": "jest --coverage --coverageDirectory=output/coverage/jest",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "prettier": "prettier --write {src,__{test}__}/**/*.{ts,js}"
  },
  "dependencies": {
    "apollo-datasource-rest": "^0.7.0",
    "apollo-server": "^2.25.3",
    "apollo-server-core": "^2.10.0",
    "apollo-server-express": "^2.10.0",
    "express": "^4.17.1",
    "graphql": "^14.6.0"
  },
  "devDependencies": {
    "@types/graphql": "^14.5.0",
    "@types/jest": "^25.1.2",
    "apollo-server-testing": "^2.10.0",
    "del": "^5.1.0",
    "dotenv-flow": "^3.1.0",
    "graphql-import": "^0.7.1",
    "gulp": "^4.0.2",
    "gulp-tslint": "^8.1.4",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.0",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.5"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageReporters": [
      "text",
      "cobertura",
      "lcov"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.ts",
      "!**/src/{server,index}.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run tslint && npm run prettier",
      "pre-push": "..."
    }
  }
}
